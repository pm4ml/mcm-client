{
  "name": "@pm4ml/mcm-client",
  "version": "3.0.3",
  "description": "Client service for Connection Manager API",
  "main": "src/index.js",
  "types": "dist/index.d.ts",
  "author": "Yevhen Kyriukha, ModusBox Inc.",
  "contributors": [
    "Yevhen Kyriukha <yevhen.kyriukha@modusbox.com>",
    "Murthy Kakarlamudi <murthy@modusbox.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/pm4ml/mcm-client.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint & npm test"
    }
  },
  "scripts": {
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "jest --ci --reporters=default --reporters=jest-junit --env=node src/test/unit --forceExit  --detectOpenHandles",
    "test:unit": "npm run test",
    "test:int": "jest --ci --reporters=default --reporters=jest-junit --env=node src/test/integration --forceExit --detectOpenHandles",
    "prepublishOnly": "tsc",
    "dep:check": "npx ncu -e 2",
    "dep:update": "npx ncu -u",
    "audit:check": "npx audit-ci --config ./audit-ci.jsonc",
    "test:xunit": "npm run test:unit | tap-xunit > ./test/results/xunit.xml",
    "test:coverage-check":  "npm run test:coverage",
    "test:integration": "npm run test:int",
    "test:functional": "./test/scripts/test-functional.sh",
    "audit:fix": "npm audit fix"
  },
  "dependencies": {
    "@mojaloop/sdk-standard-components": "19.6.2",
    "ajv": "^8.17.1",
    "async-retry": "^1.3.3",
    "dotenv": "^16.4.7",
    "fast-json-patch": "^3.1.1",
    "js-yaml": "^4.1.0",
    "node-fetch": "^3.3.2",
    "node-vault": "^0.10.2",
    "uuid": "^11.0.4",
    "web-streams-polyfill": "^4.1.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.31.0",
    "hasky": "^3.0.2",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "mockdate": "^3.0.5",
    "nock": "^13.5.6",
    "npm-check-updates": "17.1.13",
    "openapi-response-validator": "^12.1.3",
    "typescript": "^5.7.2",
    "tap-xunit": "2.4.1"
  }
}
